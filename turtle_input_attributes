import turtle

wn = turtle.Screen()
c_window = input("what is the color?")
c_window = str(c_window)
wn.bgcolor(c_window)        # set the window background color

tess = turtle.Turtle()
t_color = input("what is the pen color?")
t_color = str(t_color)
tess.color(t_color)              # make tess blue
ps_color = input("what is the pen size?")
ps_color = int(ps_color)
tess.pensize(ps_color)                 # set the width of her pen

tess.forward(50)
tess.left(120)
tess.forward(50)

wn.exitonclick()                # wait for a user click on the canvas
